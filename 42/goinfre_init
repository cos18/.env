#! /usr/bin/env zsh

cprint() {
  local color="${1:-white}"
  local message="${2:-}"

  if [ -z "$message" ]; then
    return
  fi

  case "$color" in
    white)
      echo "$message"
      ;;
    yellow)
      echo "\033[1;33m${message}\033[0m\n"
      ;;
  esac
}

# reset goinfre file
# TODO: Make options to choose reset or not
cprint yellow "Reset goinfre..."
cd ~/goinfre
ls -A1 | xargs rm -rf
cd

mkdir ~/goinfre/app
mkdir ~/goinfre/.poetry


# Install Latest VSCode
# TODO: check VSCode ssh error

