#! /usr/bin/env zsh

cprint() {
  local color="${1:-white}"
  local message="${2:-}"

  if [ -z "$message" ]; then
    return
  fi

  case "$color" in
    white)
      echo "$message"
      ;;
    yellow)
      printf "\033[1;33m%s\033[0m\n" "$message"
      ;;
  esac
}

# git basic settings
git config --global user.name "Sungwoo Park"
git config --global user.email codest99@gmail.com

# Insatll Latest VSCode
cprint yellow "Insatll Latest VSCode..."
# wget https://code.visualstudio.com/sha/download?build=stable&os=darwin-universal

: <<'END'
# run vscode in terminal
export PATH="${PATH}:/Users/sunpark/goinfre/app/Visual Studio Code.app/Contents/Resources/app/bin"
END

