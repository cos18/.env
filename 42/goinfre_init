# unzip ~/goinfre/app/code.zip -d ~/goinfre/app


# Install Brew
cprint yellow "Install Latest Brew..."
git clone --depth=1 https://github.com/Homebrew/brew $brewPath/.brew && source $HOME/.zshrc 2>/dev/null && brew update
brewPath="$(brew --prefix)"

# Install ncdu@1
brew tap OctopusET/42
brew install ncdu@1
brew link ncdu@1

# Install pyenv
brew install pyenv
brew install xz
pyenv install 3.10.11
pyenv global 3.10.11

# Install poetry
curl -sSL https://install.python-poetry.org | POETRY_HOME=/Users/sunpark/goinfre/.poetry python3